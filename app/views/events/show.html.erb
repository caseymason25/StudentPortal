

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date.strftime("%B %-d, at %I:%M%p") %>
</p>
<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>
<p>
  <strong>Host:</strong>
  <%= @event.host %>
</p>
<p>
  <strong>Type:</strong>
  <%= @event.event_type.title %>
</p>



<% if user_signed_in? && current_user.admin %><%= link_to 'Edit', edit_event_path(@event), :class => "btn btn-default btn-md " %> <%end%>
<%= link_to_function 'Back', "history.back()", :class => "btn btn-default btn-md " %>
<%= link_to 'Events', events_path , :class => "btn btn-default btn-md " %>
