<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select("date", order: [:day, :month, :year], ampm: true, class: "form-control") %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :host %><br>
    <%= f.text_field :host, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :approved %><br>
    <%= f.check_box :approved %>
  </div>

  <div class="field">
		<%= f.label :Type %>
			<select class="form-control" name="event[event_type_id]">
				<% @types.each do |type| %>
					<option value="<%=type.id%>"> <%=type.title %> </option>
				<% end %>
			</select>
		</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
