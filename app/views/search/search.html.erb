<head>
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
</head>

<h1>Search Results</h1>
<h2>Events</h2>

<div class="col-lg-12">
<table id="events-table" class="table table-striped table-hover">


	<thead>
		<tr>
			<th> Title </th>
			<th> Description </th>
			<th> Date </th>
			<th> Location </th>
		</tr>
	</thead>
	
	<% @events.each do |event| %>

		<% time = event.date %>
		<tr data-event-type-id="<%=event.event_type_id%>">
			<td> <%= event.title %> </td>
			<td> <%= event.description %> </td>
			<td> <%= time  %> </td>
			<td> <%= event.location %> </td>
			<td><%= link_to event do %><button type="button" class="popup btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="right"
			data-content="<p>Title: <%= event.title %></p><p>Description: <%= event.description %></p><p>Date: <%= event.date %></p><p>Location: <%= event.location %></p><% if event.user %><p>Created by:<%= event.user.email %></p><% end %><p>Host:<%= event.host %></p><% if event.event_type %><p>Event Type:<%= event.event_type.title %></p> <% end %>">
			<i class="fa fa-info"></i>
			</button><% end %></td>

		</tr>
		<% end %>


</table>
</div>

<h2>Courses</h2>

<div class="col-lg-12">
<table id="courses-table" class="table table-striped table-hover">


	<thead>
		<tr>
			<th> Title </th>
			<th> Department </th>
			<th> Number </th>
			<th> Degree </th>
		</tr>
	</thead>
	
	<tbody>
	<% @courses.each do |course| %>

	
		<tr data-course-type-id="<%=course.course_type_id%>">
			<td> <%= course.title %> </td>
			<td> <%= course.department %> </td>
			<td> <%= course.number %> </td>
			<td class="course-type">
				<% if course.course_type %>
					<%= course.course_type.title %> 
				<% end %>
			</td>
			
			<td><%= link_to course do %><button type="button" class="popup btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="right"
			data-content="<p>Title: <%= course.title %></p><p>Department: <%= course.department %></p><p>Description: <%= course.description %></p><p>Number:<%= course.number %></p><p>Hours:<%= course.hours %></p><p>Degree:<%= course.course_type.title %></p> ">
			<i class="fa fa-info"></i>
			</button><% end %></td>

		</tr>
		<% end %>
	</tbody>

</table>



